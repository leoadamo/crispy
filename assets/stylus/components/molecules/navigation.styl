.navigation
  display block
  top 80px
  right 0
  width 100%
  height calc(100% - 80px)
  position fixed
  transform translateX(100%)
  transition transform .2s ease-out
  background-color $quinternary-color

  +above('l')
    display block
    width auto
    height 100%
    position static
    transform none
    background none

  &--active
    transform translateX(0)

  &__list
    display flex
    height 100%
    margin auto
    justify-content space-around
    align-items flex-end
    flex-direction column
    padding rem(20px)

    +above('m')
      width 89%
      height 70%
      padding rem(40px 0)

    +above('l')
      width 100%
      align-items center
      flex-wrap wrap
      flex-direction row

  &__item
    height auto

    +above('l')
      padding rem(0 10px)
      height 100%

      &:last-child
        padding-right 0

    &__link
      display flex
      height 100%
      align-items center
      font-size rem(24px)
      line-height rem(32px)
      font-weight 400
      letter-spacing 1px
      color $white

      +above('l')
        font-size rem(16px)
        line-height rem(24px)

      &:after
        content ''
        width 50px
        height 2px
        background-color $white
        margin-left rem(15px)

        +above('l')
          display none
