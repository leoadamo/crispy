.testimonial
  display flex
  flex-direction column

  &__quote
    flex 1 0 auto
    display flex
    flex-direction column
    justify-content space-between
    box-shadow 0 0 10px rgba(0, 0, 0, 0.08)

  &__inner
    flex 1 0 auto
    background-color $primary-color
    color $white
    padding rem(24px)

  &__cite
    padding-top rem(20px)
    line-height rem(24px)
    letter-spacing rem(1px)

  &__footer
    display flex
    flex-wrap wrap
    align-items center
    padding rem(20px 0 20px 24px)

  &__avatar
    width rem(80px)
    height rem(80px)
    margin-right rem(24px)
    border-radius 50%

  &__icon
    align-self center
    margin-top rem(20px)
    font-size rem(30px)
    color $tertiary-color





