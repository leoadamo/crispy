.hamburguer
  width 45px
  height 45px
  position relative
  padding 0
  margin 0
  background-color transparent
  border none
  outline none

  +above('l')
    display none

  &__bar
    width 90%
    height 3px
    position absolute
    top 50%
    left 50%
    background-color $white
    transform-origin 50% 50%
    transform translate(-50%, -50%)
    transition opacity .3s ease, transform .2s ease-in, left .2s ease-out

    &:nth-of-type(1)
      top calc(50% - 10px)

    &:nth-of-type(3)
      top calc(50% + 10px)

    ~/--active &
      &:nth-of-type(2)
        left calc(50% - 15px)
        opacity 0

      &:nth-of-type(1),
      &:nth-of-type(3)
        top 50%

      &:nth-of-type(1)
        transform translate(-50%, -50%) rotate(45deg)

      &:nth-of-type(3)
        transform translate(-50%, -50%) rotate(-45deg)


