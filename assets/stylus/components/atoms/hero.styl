.hero
  display flex
  align-items center
  max-width 100%
  height 630px
  position relative

  &:before
    content ''
    display block
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    background-color rgba(0, 0, 0, .35)
    z-index 1

  &__image
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    object-fit cover

  &__inner
    @extend .container
    height auto
    position relative
    z-index 2

    &__intro
      width auto
      max-width 80%
      margin auto
      text-align center
      margin-top rem(15px)
      color $white

      +above('m')
        max-width 50%
        margin-left 0
        text-align left





