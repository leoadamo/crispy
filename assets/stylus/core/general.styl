.container
  width calc(100% - 20px)
  max-width 1110px
  height 100%
  margin auto

  +above('m')
    width 90%

.content
  display flex
  min-height 100vh
  flex-direction column

.wrapper
  flex 1
  display flex
  align-items flex-end
  padding-top 80px

  > div
    width 100%

.btn-wrapper
  display flex
  flex-direction column
  justify-content center
  align-items center

  +above('m')
    flex-direction row
    justify-content flex-start
